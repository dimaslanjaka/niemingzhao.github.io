<script type="application/ld+json">
  {
    "author": {
      "url": "<%- pg.author.url || pg.url %>",
      "name": "<%= get_author_name(page, config) %>",
      "@context": "http://schema.org",
      "@type": "Person"
    },
    "headline": "<%- pg.title %>",
    "publisher": {
      "url": "<%- pg.author.url || pg.url %>",
      "name": "<%= get_author_name(pg, config) %>",
      "@context": "http://schema.org",
      "@type": "Person"
    },
    "description": "<%= pg.subtitle || pg.excerpt || pg.title || config.title %>",
    "datePublished": "<%= date(pg.date, 'YYYY-MM-DD HH:mm:ss') %>",
    "image": "<%- get_thumbnail(pg, config, theme) %>",
    "dateModified": "<%- date(pg.modified || pg.date, 'YYYY-MM-DD HH:mm:ss') %>",
    "@context": "http://schema.org",
    "@type": "Article"
  }
</script>